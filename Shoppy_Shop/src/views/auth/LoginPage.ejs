<%- contentFor("title") %>
    Sign-In

<%- contentFor("styles") %>
    <link href="https://fonts.googleapis.com/css?family=Karla:400,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/static/common/styles/LoginPage.css">

<%- contentFor("content") %>
    <div class="d-flex align-items-center min-vh-100 py-3 py-md-0">
        <div class="container">
            <div class="card login-card">
                <div class="row no-gutters">
                    <div class="col-md-5">
                        <img src="/static/common/images/malik/customersLogin.jpg" alt="login"
                            class="login-card-img">
                    </div>
                    <div class="col-md-7">
                        <div class="card-body">
                            <div class="brand-wrapper">
                                <img src="/static/common/images/malik/logo.png" alt="logo here" class="logo"
                                    style="justify-content: center;">
                            </div>
                            <p class="login-card-description">Sign-In</p>
                            <form method="POST">
                                <div class="form-group">
                                    <label for="username" class="sr-only">Email</label>
                                    <input type="text" name="username" id="username"
                                        class="form-control bg-light" placeholder="Username or Email Address">
                                </div>
                                <div class="form-group mb-4">
                                    <label for="password" class="sr-only">Password</label>
                                    <input type="password" name="password" id="password"
                                        class="form-control bg-light" placeholder="Password">
                                </div>
                                <input name="login" id="login" class="btn btn-success btn-block login-btn mb-4"
                                    type="submit" value="Login">
                            </form>
                            <a href="#!" class="forgot-password-link">Forgot password?</a>
                            <p class="login-card-footer-text">Don't have an account yet? <a href="/register"
                                    class="text-reset">Register here</a></p>
                                    <a href="/" class="text-reset">Home Page</a>
                            <nav class="login-card-footer-nav">
                                <a href="#!">Terms of use</a>
                                <a href="#!">Privacy policy</a>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>