        </div>
        <div class="p-2 bd-highlight">
          <button class="priceBtn">42 EU</button>
        </div>
        <div class="p-2 bd-highlight">
          <button class="priceBtn">38 EU</button>
        </div>
      </div>
      <h5 class="desc">Description:</h5>
      <ul>
        <% product.description.split("\n").forEach(function(value){ %> <%
        if(value){ %>
